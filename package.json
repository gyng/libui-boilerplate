{
  "name": "libui-boilerplate",
  "version": "0.0.1",
  "description": "Boilerplate for a UI library",
  "main": "dist/index.js",
  "style": "dist/styles.css",
  "author": "Ng Guoyou <gyng@users.noreply.github.com>",
  "license": "MIT",
  "types": "dist/typings/",
  "scripts": {
    "build": "yarn check && rollup --config",
    "ts:check": "yarn tcm:gen && tsc --noEmit --skipLibCheck",
    "tcm:gen": "tcm lib",
    "ck": "yarn lint && yarn test",
    "clean": "rm -rf ./dist",
    "d": "rollup --config --watch",
    "t": "jest",
    "test": "yarn t",
    "lint": "yarn ts:check && yarn lint:tslint && yarn lint:stylelint",
    "lint:tslint": "tslint -c tslint.json --project tsconfig.json",
    "lint:tslint:fix": "yarn lint:tslint --fix",
    "lint:stylelint": "stylelint '**/*.css' '**/*.scss'",
    "lint:stylelint:fix": "yarn lint:stylelint --fix"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.15",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.10",
    "@types/react": "^16.7.17",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "jest": "^23.6.0",
    "jest-transform-stub": "^1.0.0",
    "prettier": "^1.15.3",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "rollup": "^0.68.0",
    "rollup-plugin-postcss": "^1.6.3",
    "rollup-plugin-terser": "^3.0.0",
    "rollup-plugin-typescript2": "^0.18.1",
    "stylelint": "^9.9.0",
    "stylelint-config-css-modules": "^1.3.0",
    "stylelint-config-standard": "^18.2.0",
    "ts-jest": "^23.10.5",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "typed-css-modules": "^0.3.7",
    "typescript": "^3.2.2"
  },
  "peerDependencies": {
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  }
}
